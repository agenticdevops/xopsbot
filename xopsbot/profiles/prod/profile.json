{
  "name": "prod",
  "description": "Production environment - Mutations require explicit approval, full audit trail",

  "environment": {
    "KUBECONFIG": "~/.kube/prod-config",
    "AWS_PROFILE": "prod",
    "AWS_REGION": "us-west-2",
    "DOCKER_HOST": ""
  },

  "safety": {
    "mode": "standard",
    "audit_logging": true
  },

  "active_workspaces": [
    "k8s-agent",
    "rca-agent",
    "incident-agent"
  ],

  "bindings": [
    {
      "channel": "slack",
      "peer": "#ops-alerts",
      "agentId": "xops-incident"
    }
  ]
}
